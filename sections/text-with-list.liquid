{{ 'text-with-list.css' | asset_url | stylesheet_tag }}

{% liquid
  assign bg_color = section.settings.bg_color
  assign text_color = section.settings.text_color

  assign padding_top = section.settings.padding_top | append: "px"
  assign padding_bottom = section.settings.padding_bottom | append: "px"

  assign heading = section.settings.heading
  assign description = section.settings.description
  assign list_type = section.settings.list_type
  assign image = section.settings.image
%}

<div class="text-with-list" style="
        --padding-top: {{ padding_top }};
        --padding-bottom: {{ padding_bottom }};
        --bg-color: {{ bg_color }};
        --text-color: {{ text_color }};">
    <div class="text-with-list__wrapper page-width">
        <div class="text-with-list__inner">
          <div class="text-with-list__content">
            {% if heading != blank %}
              <div class="text-with-list__heading">{{ heading }}</div>
            {% endif %}

            {% if description != blank %}
              <div class="text-with-list__description">{{ description }}</div>
            {% endif %}
          </div>
          <div class="text-with-list__items-wrap">
            {% if section.blocks.size > 0 %}
              <ul class="text-with-list__items">
                {% for block in section.blocks %}
                {% liquid
                  assign heading = block.settings.heading
                  assign description = block.settings.description

                  assign bg_color = block.settings.bg_color_block
                  assign text_color = block.settings.text_color_block

                  assign content_padding_top = block.settings.content_padding_top | append: "px"
                  assign content_padding_bottom = block.settings.content_padding_bottom | append: "px"
                  assign content_padding_right = block.settings.content_padding_right | append: "px"
                  assign content_padding_left = block.settings.content_padding_left | append: "px"
                %}
                  <li style="
                          --content-padding-top: {{ content_padding_top }};
                          --content-padding-bottom: {{ content_padding_bottom }};
                          --content-padding-left: {{ content_padding_left }};
                          --content-padding-right: {{ content_padding_right }};
                          --bg-color-block: {{ bg_color }};
                          --text-color-block: {{ text_color }};">
                    <div class="text-with-list__box">
                      {% if list_type == 'decimal' %}
                        {{ forloop.index }}
                        {% elsif list_type == 'image' and image != blank %}
                        {{ image | image_url: width: 32 | image_tag: preload: true }}
                      {% endif %}
                    </div>

                    <div class="text-with-list__cart">
                      {% if heading != blank %}
                        <div class="text-with-list__heading-item">{{ heading }}</div>
                      {% endif %}

                      {% if description != blank %}
                        <div class="text-with-list__description-item">{{ description }}</div>
                      {% endif %}
                    </div>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Text with list",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#23201d"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<h2>Heading</h2>"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod.</p>"
    },
    {
      "type": "select",
      "id": "list_type",
      "label": "List style type",
      "options": [
        {
          "value": "decimal",
          "label": "Decimal"
        },
        {
          "value": "image",
          "label": "Image"
        },
      ],
      "default": "decimal"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "visible_if": "{{ section.settings.list_type != 'decimal'}}"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Top padding",
      "default": 128
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Bottom padding",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings":[
        {
          "type": "header",
          "content": "Background and text colors for list style type"
        },
        {
          "type": "color",
          "id": "bg_color_block",
          "label": "Background color",
          "default": "#f3f2f0"
        },
        {
          "type": "color",
          "id": "text_color_block",
          "label": "Text color",
          "default": "#000000"
        },
        {
          "type": "richtext",
          "id": "heading",
          "label": "Heading",
          "default": "<h4>Heading</h4>"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod.</p>"
        },
        {
          "type": "header",
          "content": "Content padding"
        },
        {
          "type": "range",
          "id": "content_padding_top",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Top padding",
          "default": 32
        },
        {
          "type": "range",
          "id": "content_padding_bottom",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Bottom padding",
          "default": 32
        },
        {
          "type": "range",
          "id": "content_padding_left",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Left padding",
          "default": 0
        },
        {
          "type": "range",
          "id": "content_padding_right",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Right padding",
          "default": 32
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text with list",
      "blocks": [
        {
          "type": "block"
        },
        {
          "type": "block"
        },
        {
          "type": "block"
        }
      ]
    }
  ]
}
{% endschema %}