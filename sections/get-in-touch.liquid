{{ 'get-in-touch.css' | asset_url | stylesheet_tag }}

{% liquid
    assign bg_color = section.settings.bg_color
    assign heading_color = section.settings.heading_color
    assign padding_top = section.settings.padding_top | append: "px"
    assign padding_bottom = section.settings.padding_bottom | append: "px"

    assign heading = section.settings.heading
%}

<div class="get-in-touch" style="
        --padding-top: {{ padding_top }};
        --padding-bottom: {{ padding_bottom }};
        --bg-color: {{ bg_color }};
        --heading-color: {{ heading_color }}">

    <div class="get-in-touch__wrapper page-width">
        <div class="get-in-touch__inner">
            {% if heading != blank %}
                <div class="get-in-touch__heading">{{ heading }}</div>
            {% endif %}

            {% if section.blocks.size > 0 %}
                <div class="get-in-touch__button-items">
                    {% for block in section.blocks %}
                        {% liquid
                            assign btn_label = block.settings.btn_label
                            assign btn_url = block.settings.btn_url
                        %}

                        {% if btn_label != blank %}
                            <a href="{{ btn_url }}" class="button-primary"><span>{{ btn_label }}</span></a>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Get in touch",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#23201d"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#ffffff"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<h1>Get in touch</h1>"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Top padding",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Bottom padding",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings":[
        {
          "type": "text",
          "id": "btn_label",
          "label": "Label",
          "default": "Button label"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Get in touch",
      "blocks": [
        {
          "type": "button"
        },
        {
          "type": "button"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}