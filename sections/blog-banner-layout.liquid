{{ 'blog-banner-layout.css' | asset_url | stylesheet_tag }}

{% liquid
    assign bg_color = section.settings.bg_color
    assign text_color = section.settings.text_color

    assign padding_top = section.settings.padding_top | append: "px"
    assign padding_bottom = section.settings.padding_bottom | append: "px"

    assign heading = section.settings.heading
    assign description = section.settings.description

    assign image = section.settings.image
    assign btn_label = section.settings.btn_label
    assign btn_url = section.settings.btn_url

    assign article = section.settings.article
%}

<div class="blog-banner-layout" style="
        --padding-top: {{ padding_top }};
        --padding-bottom: {{ padding_bottom }};
        --bg-color: {{ bg_color }};
        --text-color: {{ text_color }};">
    <div class="blog-banner-layout__wrapper page-width">
        <div class="blog-banner-layout__inner">
            <div class="blog-banner-layout__content">
                {% liquid
                    assign heading_banner = article.title | default: heading
                    assign description_banner = article.content | default: description
                    assign image_banner = article.image | default: image
                    assign url_banner = article.url | default: btn_url
                %}

                {% if heading_banner != blank %}
                    <div class="blog-banner-layout__heading heading-h2">{{ heading_banner }}</div>
                {% endif %}

                {% if description_banner != blank %}
                    <div class="blog-banner-layout__description description-size-md">{{ description_banner | strip_html | truncate: 80 }}</div>
                {% endif %}

                {% if btn_label != blank %}
                    <div class="blog-banner-layout__button-wrap">
                        <a href="{{ url_banner }}" class="button-primary"><span>{{ btn_label }}</span></a>
                    </div>
                {% endif %}
            </div>
            <div class="blog-banner-layout__image-wrap">
                <div class="blog-banner-layout__image">
                    {% if image_banner != blank %}
                        {{ image_banner | image_url: width: 1200 | image_tag }}
                    {% else %}
                        <span class="visibility-hidden"></span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Blog banner (layout)",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#FAF8F7"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#23201d"
    },
    {
      "type": "article",
      "id": "article",
      "label": "Article"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<h2>Heading</h2>"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Label",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "URL"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Blog banner (layout)"
    }
  ]
}
{% endschema %}