{{ 'offices.css' | asset_url | stylesheet_tag }}

{% liquid
    assign bg_color = section.settings.bg_color
    assign text_color = section.settings.text_color
    assign padding_top = section.settings.padding_top | append: "px"
    assign padding_bottom = section.settings.padding_bottom | append: "px"

    assign heading = section.settings.heading
%}

<div class="offices" style="
        --padding-top: {{ padding_top }};
        --padding-bottom: {{ padding_bottom }};
        --bg-color: {{ bg_color }};
        --text-color: {{ text_color }}">
    <div class="offices__wrapper page-width">
        <div class="offices__inner {% unless heading != blank %}offices__inner--no-gap{% endunless %}">
          <div class="offices__heading {% unless heading != blank %}offices__heading--empty{% endunless %}">
            {% if heading != blank %}
              {{ heading }}
            {% endif %}
          </div>

          {% if section.blocks.size > 0 %}
            <ul class="offices__items">
              {% for block in section.blocks %}
                {% liquid
                  assign office_heading = block.settings.office_heading
                  assign description = block.settings.description

                  assign content_padding_top = block.settings.content_padding_top | append: "px"
                  assign content_padding_bottom = block.settings.content_padding_bottom | append: "px"
                  assign content_padding_right = block.settings.content_padding_right | append: "px"
                  assign content_padding_left = block.settings.content_padding_left | append: "px"
                %}

                <li style="
                        --content-padding-top: {{ content_padding_top }}; --content-padding-bottom: {{ content_padding_bottom }};
                        --content-padding-left: {{ content_padding_left }}; --content-padding-right: {{ content_padding_right }};">
                  <div class="office-cart">
                    {% if office_heading != blank %}
                      <div class="office-cart__heading">{{ office_heading }}</div>
                    {% endif %}

                    {% if description != blank %}
                      <div class="office-cart__description">{{ description }}</div>
                    {% endif %}
                  </div>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Offices",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#23201d"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<h2>Offices</h2>"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Top padding",
      "default": 160
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Bottom padding",
      "default": 144
    }
  ],
  "blocks": [
    {
      "type": "office",
      "name": "Office",
      "settings":[
        {
          "type": "richtext",
          "id": "office_heading",
          "label": "Heading",
          "default": "<h4>Heading</h4>"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod.</p>"
        },
        {
          "type": "header",
          "content": "Content padding"
        },
        {
          "type": "range",
          "id": "content_padding_top",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Top padding",
          "default": 32
        },
        {
          "type": "range",
          "id": "content_padding_bottom",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Bottom padding",
          "default": 32
        },
        {
          "type": "range",
          "id": "content_padding_left",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Left padding",
          "default": 0
        },
        {
          "type": "range",
          "id": "content_padding_right",
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px",
          "label": "Right padding",
          "default": 32
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Offices",
      "blocks": [
        {
          "type": "office"
        },
        {
          "type": "office"
        },
        {
          "type": "office"
        }
      ]
    }
  ]
}
{% endschema %}